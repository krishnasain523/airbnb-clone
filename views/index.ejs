<div class="list-contain row row-cols-md-2 row-cols-lg-4 row-cols-sm-1">
    <% for(listings of alllisting){ %>
        <a href="/listings/<%= listings._id %>" class="listing-links">
            <div class="card col listing-card">
                <img src="<%= listings.image.url %>" class="card-img-top" alt="listing-image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b> <%= listings.title %></b> <br>
                   &#x20b9 <%= listings.price %>
                </p>
                </div>
              </div>
        </a>
      <%  }%>
</div>
 

</body>